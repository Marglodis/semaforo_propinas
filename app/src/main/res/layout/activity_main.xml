<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="20dp"
    tools:context=".MainActivity">

    <!-- Título principal -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/tv_titulo"
        android:textAppearance="?attr/textAppearanceHeadlineMedium"
        android:textColor="@color/title_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Campo de monto con colores mejorados -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_monto"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="@string/et_monto"
        app:startIconTint="@color/primary_color"
        app:boxStrokeColor="@color/primary_color"
        app:hintTextColor="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo"
        app:layout_constraintWidth_percent="0.85">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_monto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="18sp"
            android:textColor="@color/text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo de porcentaje con colores mejorados -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_porcentaje"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/et_porcentaje"
        app:startIconTint="@color/primary_color"
        app:boxStrokeColor="@color/primary_color"
        app:hintTextColor="@color/primary_color"
        app:suffixText="%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_monto"
        app:layout_constraintWidth_percent="0.85">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_porcentaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="18sp"
            android:textColor="@color/text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botón con colores atractivos -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_calcular_propina"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:text="@string/btn_calcular_propina"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/button_color"
        app:cornerRadius="25dp"
        app:icon="@drawable/ic_calculate"
        app:iconGravity="start"
        app:iconTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_porcentaje"
        app:layout_constraintWidth_percent="0.7" />

    <!-- Resultado con mejor presentación (inicialmente invisible) -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/result_background"
        android:padding="20dp"
        android:text=""
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textColor="@color/result_text_color"
        android:textStyle="bold"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_calcular_propina" />

    <!-- Imagen estado con marco circular -->
    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="55dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_resultado">

        <ImageView
            android:id="@+id/iv_estado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/imagen_de_estado"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:visibility="invisible"
            app:srcCompat="@drawable/neutro" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>